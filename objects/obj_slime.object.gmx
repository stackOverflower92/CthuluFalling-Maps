          <argument>
            <kind>1</kind>
            <string>/// Movement
//hsp = dir * movespeed;
vsp += grav;
chase_hsp = dir * fast_movespeed;

// Check state
switch (current_state) {
       case e_state.idle: {
            // Set animation speed
            image_speed = 0.1;
       
            // Go back and forth
            hsp = dir * movespeed;
            pixels_walk++;
            
            // Check how much it walked
            if (pixels_walk == pixels_walk_max) {
               // Change direction
               dir *= -1;
               
               // Reset counter
               pixels_walk = 0;
            }
            
            // Check state change
            if (distance_to_object(obj_player) &lt; 96) {
               current_state = e_state.chasing;
            }
       } break;
       
       case e_state.chasing: {
            // Set animation speed
            image_speed = 0.5;
       
            // Calculate direction
            dir = sign(obj_player.x - x);
            
            hsp = dir * fast_movespeed;
            
            if (distance_to_object(obj_player) &gt; 128) {
               current_state = e_state.idle;
            }
       } break;
}

// Horizontal collision
if (place_meeting(x + hsp, y, obj_environmentItem)) {
    while (!place_meeting(x + sign(hsp), y, obj_environmentItem)) {
        x += sign(hsp);
    }
    hsp = 0;
    
    // Wall hit. Change direction
    dir *= -1;
    pixels_walk = 0;
    
}
x += hsp;

// Vertical collision
if (place_meeting(x, y + vsp, obj_environmentItem)) {
    while (!place_meeting(x, y + sign(vsp), obj_environmentItem)) {
        y += sign(vsp);
    }
    vsp = 0;
}
y += vsp;

// Enemy collision
if (place_meeting(x, y, obj_player)) {
   if (obj_player.y &lt; y - sprite_height / 2) {
      with (obj_player) {
           vsp = -jumpspeed;
      }  
      instance_destroy();
   } 
}
